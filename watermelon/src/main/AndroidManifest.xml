<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.watermelon">
    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 플레이어 애플리케이션에서 화면이 어두워지는 것이나 프로세서의 절전 모드를 방지하기 위함 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- SD 외장메모리 권한 설정 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/watermelon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidTeamProject">
        <activity
            android:name=".PlayMusicActivity"
            android:exported="false" />
        <activity
            android:name=".ShowMyInfo"
            android:exported="false" />
        <activity
            android:name=".UpdateUser"
            android:exported="false" />
        <activity
            android:name=".SignInUp"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:exported="false" />
        <activity
            android:name=".FragmentActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>