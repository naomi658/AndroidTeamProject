<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/dark_gray">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/myInfo"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_id_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:enabled="false"
            android:text="moble0620"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:textSize="30sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_pw_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="@string/new_pw"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/gray"
            android:fontFamily="monospace"
            android:inputType="numberPassword"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_pwOk_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="@string/new_pw_check"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/gray"
            android:fontFamily="monospace"
            android:inputType="numberPassword"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_name_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:enabled="false"
            android:text="이모블"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:textSize="30sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_setting_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/save_my_info"
        android:fontFamily="monospace"
        android:textSize="20sp" />

</LinearLayout>